{
  "name": "Jira GitHub Links",
  "version": "1.0.0",
  "manifest_version": 2,
  "minimum_chrome_version": "53",
  "description": "Jira GitHub Links",
  "icons": {},
  "browser_action": {
    "default_icon": {},
    "default_title": "Jira GitHub Links"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://jira.tc.lenovo.com/*",
        "*://jira.stone-ware.com/*",
        "*://*.atlassian.net/*"
      ],
      "js": [
        "scripts/shared/polyfills.js",
        "lib/xbrowser-polyfill.js",
        "scripts/jira-content-script.js"
      ],
      "all_frames": false
    },
    {
      "run_at": "document_end",
      "matches": [
        "https://github.com/*/*/pull/*"
      ],
      "js": [
        "scripts/shared/polyfills.js",
        "lib/xbrowser-polyfill.js",
        "scripts/github-content-script.js"
      ],
      "all_frames": false
    }
  ],
  "permissions": [
    "storage",
    "contextMenus",
    "identity",
    "webNavigation",
    "tabs",
    "https://api.github.com/*",
    "https://github.com/*",
    "*://jira.tc.lenovo.com/*",
    "*://jira.stone-ware.com/*",
    "*://*.atlassian.net/*"
  ],
  "incognito": "split",
  "web_accessible_resources": []
}
